<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eBlokk.AddBlokk"
             Title="AddBlokk">
    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Kép hozzáadása mező -->
        <Frame HeightRequest="150" WidthRequest="150" 
               BackgroundColor="LightGray" CornerRadius="10" 
               HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="+Kép" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" />
        </Frame>

        <!-- Dátum beviteli mező -->
        <DatePicker x:Name="datePicker" Format="yyyy-MM-dd" />

        <!-- Üzletlánc beviteli mező -->
        <Entry x:Name="storeEntry" Placeholder="Üzletlánc" />

        <!-- Város beviteli mező -->
        <Entry x:Name="cityEntry" Placeholder="Város" />

        <!-- Végösszeg beviteli mező -->
        <Entry x:Name="totalEntry" Placeholder="Végösszeg" Keyboard="Numeric" />

        <!-- Hozzáadás gomb -->
        <Button Text="Hozzáadás" BackgroundColor="Green" TextColor="White" />

    </VerticalStackLayout>
</ContentPage>