<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eBlokk.LoginPage"
             Title="">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Bejelentkezés" FontSize="Large" HorizontalOptions="Center"/>

        <Entry x:Name="usernameEntry" Placeholder="Felhasználónév"/>
        <Entry x:Name="passwordEntry" Placeholder="Jelszó" IsPassword="True"/>

        <Button Text="Bejelentkezés" Clicked="OnLoginClicked"/>

        <Button Text="Nincs még fiókod? Regisztrálj!" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>