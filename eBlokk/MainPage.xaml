<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eBlokk.MainPage"
             Title="">

    <Grid>
        <!-- Grid sorok definiálása -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Tartalom -->
            <RowDefinition Height="60" />
            <!-- Lábléc -->
        </Grid.RowDefinitions>

        <!-- Címke, amely a bejelentkezett felhasználó nevét jeleníti meg -->
        <Label Text="{Binding Username, StringFormat='Szia, {0}!'}"
               FontSize="24"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Padding="20, 20, 0, 0"
               Style="{StaticResource TitleStyle}" />

        <!-- Tartalom a felső sorban -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <Image
                    Source="C:\Users\diak\Documents\HL\Projekt\VS\MauiApp1\MauiApp1\Resources\Images\blokk.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a race car number eight" />

                <Label
                    Text="eBlokk App"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="Üdvözellek a papírmentes nyugták világában!"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Lábjegyzet a második sorban -->
        <Frame CornerRadius="35"
       BackgroundColor="White"
       Padding="10"
       Margin="20,0,20,30"
       HeightRequest="80"
       HorizontalOptions="FillAndExpand"
       VerticalOptions="End"
       HasShadow="True"
       TranslationY="-10">

            <Grid ColumnDefinitions="*,*,*,*,*" HorizontalOptions="FillAndExpand">

                <!-- Aktív gomb -->
                <Frame BackgroundColor="#FFEEEE" Padding="10" CornerRadius="25" HorizontalOptions="Center" VerticalOptions="Center">
                    
                    <ImageButton Source="home_black.png"
                         BackgroundColor="Transparent"
                         HeightRequest="24"
                         WidthRequest="24"/>
                </Frame>

                <ImageButton Source="receipt_black.png"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Grid.Column="1"
                     Clicked="OnMyReceiptsPageClicked" />

                <ImageButton Source="qr.png"
                     BackgroundColor="Transparent"
                     HeightRequest="40"
                     WidthRequest="40"
                     Grid.Column="2"
                     Clicked="Button_Clicked_1" />


                <ImageButton Source="user.png"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Grid.Column="3"
                     Clicked="ProfilePageClicked" />

                <ImageButton Source="ellipsis.png"
                     BackgroundColor="Transparent"
                     HeightRequest="24"
                     WidthRequest="24"
                     Grid.Column="4" />

            </Grid>
        </Frame>

    </Grid>
</ContentPage>

