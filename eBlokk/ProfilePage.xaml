<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eBlokk.ProfilePage"
             Title="Profil"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Üzenetek gomb és értesítés ikon -->
        <Grid BackgroundColor="White" Padding="15">
            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="10">
                <Label Text="Üzenetek" FontSize="18" VerticalOptions="Center" />
                <Frame BackgroundColor="Red" CornerRadius="10" Padding="5" HeightRequest="25" WidthRequest="25">
                    <Label Text="2" TextColor="White" FontSize="12" HorizontalTextAlignment="Center" />
                </Frame>
            </StackLayout>
        </Grid>

        <!-- Fő beállítások lista -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="20" Spacing="10">
                <Button Text="Nyelv kiválasztása" BackgroundColor="Black" TextColor="White" />
                <Button Text="Értesítések" BackgroundColor="Black" TextColor="White" />
                <Button Text="Segítség" BackgroundColor="Black" TextColor="White" />
                <Button Text="MySPAR alkalmazás ÁSZF" BackgroundColor="Black" TextColor="White" />
                <Button Text="Cégadatok" BackgroundColor="Black" TextColor="White" />
                <Button Text="Alkalmazás értékelése" BackgroundColor="Black" TextColor="White" />
                <Button Text="Rólunk" BackgroundColor="Black" TextColor="White" />
                <Button Text="Fiók törlése" BackgroundColor="Black" TextColor="Red" />
            </StackLayout>
        </ScrollView>

        <!-- Navigációs gombok -->
        <StackLayout Grid.Row="2" Padding="20" HorizontalOptions="Center" Spacing="10">
            <StackLayout Orientation="Horizontal" Spacing="20">
                <Button Text="Kezdőlap" BackgroundColor="#007AFF" TextColor="White" Clicked="MainPageClicked"/>
                <Button Text="Blokkjaim" BackgroundColor="#007AFF" TextColor="White" Clicked="OnMyReceiptsPageClicked"/>
            </StackLayout>

            <Button Text="KIJELENTKEZÉS" TextColor="Red" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" Clicked="OnLogoutClicked" />
            <Label Text="Verzió 7.5.0.1239-5772611" FontSize="14" TextColor="Gray" HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>
